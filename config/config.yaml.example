# 무한매수 전략 시스템 설정 파일
# 한국투자증권 API를 이용한 SOXL 자동 거래 시스템

api: # 한국투자증권 API 설정
  app_key: "YOUR_APP_KEY_HERE"  # 한국투자증권 API 앱 키
  app_secret: "YOUR_APP_SECRET_HERE"  # 한국투자증권 API 앱 시크릿
  account_number: "12345678"  # 계좌번호 (8자리)
  # URL 설정 - is_virtual에 따라 자동 선택
  base_url_real: "https://openapi.koreainvestment.com:9443"      # 실전투자용
  base_url_virtual: "https://openapivts.koreainvestment.com:29443"  # 모의투자용
  is_virtual: true  # 모의투자: true, 실전투자: false

trading: # 거래 설정
  infinite_buying_strategy: # 무한매수 전략 설정
    symbol: "SOXL"  # 거래 종목 (SOXL, TQQQ 등)
    total_investment: 1000000  # 전략 할당 총투자금 (달러)
    division_count: 40  # 분할수 (총 투자 건수)
    max_profit_rate: 12  # 목표수익률(최대익절비율) %
    min_profit_rate: 8  # 최소익절비율 %
    star_adjustment_rate: 0  # Star 보정비율 % (default 0)
    trade_history_test_mode: true  # 거래내역 테스트 모드 (가상 데이터 사용) - true로 설정하면 가상 거래내역으로 테스트 가능

telegram:
  enabled: true  # 텔레그램 알림 사용 여부
  token: "YOUR_TELEGRAM_BOT_TOKEN"  # 텔레그램 봇 토큰
  chat_id: "YOUR_CHAT_ID"  # 텔레그램 채팅 ID 